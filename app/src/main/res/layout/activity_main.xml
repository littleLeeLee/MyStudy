<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actiivity.MainActivity">

    <com.eftimoff.androipathview.PathView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/pathView"
        app:layout_constraintBottom_toTopOf="@+id/ry_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:pathColor="@color/google_green"
        app:pathWidth="2dp"
        app:svg="@raw/bingdu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ry_main" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.3"/>
</androidx.constraintlayout.widget.ConstraintLayout>